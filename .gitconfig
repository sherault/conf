	email = stephane.herault@gmail.com

[color]
	status = auto
	diff = auto

[color "status"]
	added = green
	untracked = magenta
	deleted = red

[alias]
	st = status
	up = pull --rebase
	ready = rebase -i @{u}
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	standup = log --since yesterday
	co = checkout
	cl = clone
	ci = commit
	pu = push
	br = branch

[core]
	editor = emacs
	fileMode = false
	autocrlf = false
	excludesfile = ~/.git_core_excludesfile

[push]
	default = matching

[pager]
	diff = diff-so-fancy | less --tabs=1,5 -RFX
	show = diff-so-fancy | less --tabs=1,5 -RFX
